type Collaborator {
    id: ID!
    code: String
    name: String!
    surname: String!
    dateOfBirth: Date!
    hiringDate: Date!
    address: String
    phone: String
    notes: String
    collaboratorEconomics: [CollaboratorEconomics]
}

input CollaboratorInput {
    id: ID
    code: String
    name: String!
    surname: String!
    dateOfBirth: Date!
    hiringDate: Date!
    address: String
    phone: String
    notes: String
}

extend type Query {
    collaborator(id: ID!): Collaborator
    allCollaborators: [Collaborator]
}

extend type Mutation {
    createCollaborator(collaborator: CollaboratorInput!): Collaborator
    updateCollaborator(collaborator: CollaboratorInput!): Collaborator
    deleteCollaborator(id: ID!): DeleteResponse
}
